    function downloadTXTFile() {
        let content = "FOGÓN BACKUP - EL JUEGO MÁS JEVI PARA PANAS DOMINICANOS\n";
        content += "=" + "=".repeat(65) + "\n\n";
        content += "⚠️ SOLO PARA MAYORES DE 18 AÑOS ⚠️\n\n";
        content += "Descargado desde: [Tu sitio web]\n";
        content += "Fecha: " + new Date().toLocaleDateString() + "\n\n";
        
        content += "🔥 CARTAS VERDAD (30 cartas)\n";
        content += "-".repeat(40) + "\n\n";
        
        spicyTruths.forEach((truth, index) => {
            content += `${index + 1}. ${truth}\n\n`;
        });
        
        content += "\n🌶️ CARTAS RETO (30 cartas)\n";
        content += "-".repeat(40) + "\n\n";
        
        spicyDares.forEach((dare, index) => {
            content += `${index + 1}. ${dare}\n\n`;
        });
        
        content += "\n📋 CÓMO JUGAR\n";
        content += "-".repeat(40) + "\n";
        content += "1. Descarga e imprime las cartas\n";
        content += "2. Reúnete con tus panas\n";
        content += "3. Mezcla las cartas\n";
        content += "4. Cada jugador toma una carta\n";
        content += "5. Cumple la verdad o el reto\n";
        content += "6. ¡Disfruta la noche loca!\n\n";
        
        content += "⚠️ ADVERTENCIAS IMPORTANTES:\n";
        content += "• Contenido exclusivamente para adultos mayores de 18 años\n";
        content += "• Juego diseñado para grupos de amigos en ambiente privado\n";
        content += "• Contenido con jerga dominicana explícita\n";
        content += "• Uso responsable entre adultos que se conocen\n\n";
        
        content += "Fogón Backup © 2024 - Juego gratuito para uso personal\n";
        
        const blob = new Blob([content], { type: 'text/plain;charset=utf-8' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'Fogon-Backup-Completo.txt';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
    }

    function downloadJSONFile() {
        const gameData = {
