    async function downloadTruthPDF() {
        const { jsPDF } = window.jspdf;
        const pdf = new jsPDF('p', 'mm', 'a4');
        
        // Portada
        pdf.setFontSize(24);
        pdf.setTextColor(255, 107, 53);
        pdf.text('FOG√ìN BACKUP üî•', 20, 30);
        pdf.setFontSize(16);
        pdf.setTextColor(0, 0, 0);
        pdf.text('CARTAS VERDAD - El juego m√°s jevi para panas', 20, 45);
        
        let yPosition = 70;
        pdf.setFontSize(12);
        
        spicyTruths.forEach((truth, index) => {
            if (yPosition > 270) {
                pdf.addPage();
                yPosition = 20;
            }
            
            pdf.setFont(undefined, 'bold');
            pdf.text(`VERDAD #${index + 1}:`, 20, yPosition);
            pdf.setFont(undefined, 'normal');
            
            const lines = pdf.splitTextToSize(truth, 170);
            pdf.text(lines, 20, yPosition + 7);
            yPosition += (lines.length * 7) + 15;
        });
        
        pdf.save('Fogon-Backup-Verdades.pdf');
    }

